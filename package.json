{
  "name": "@boillodmanuel/link-check",
  "version": "5.0.0",
  "description": "checks whether a hyperlink is alive (200 OK) or dead",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "getVersion": "node -e \"console.log(require('./package.json').version)\"",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "pretest": "npm run lint",
    "test": "mocha --exit",
    "build": "npm run lint && npm run build-ts",
    "build-ts": "rm -rf ./dist && tsc -p tsconfig-build.json",
    "preversion": "npm run format && npm test && npm run build",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/boillodmanuel/link-check.git"
  },
  "keywords": [
    "link",
    "check",
    "checker",
    "hyperlink",
    "alive",
    "dead",
    "HTTP",
    "head"
  ],
  "author": "Thomas Cort <linuxgeek@gmail.com>",
  "contributors": [
    "Manuel Boillod"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/boillodmanuel/link-check/issues"
  },
  "homepage": "https://github.com/boillodmanuel/link-check#readme",
  "dependencies": {
    "is-relative-url": "^3.0.0",
    "isemail": "^3.2.0",
    "ms": "^2.1.2",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.4",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.14.10",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "changelog-verify": "^1.1.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "expect.js": "^0.3.1",
    "express": "^4.17.1",
    "jshint": "^2.12.0",
    "mocha": "^8.2.1",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "version-changelog": "^3.1.1"
  },
  "jshintConfig": {
    "bitwise": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "globalstrict": true,
    "immed": true,
    "indent": 4,
    "moz": true,
    "newcap": true,
    "noarg": true,
    "node": true,
    "noempty": true,
    "nonew": true,
    "trailing": true,
    "undef": true,
    "smarttabs": true,
    "strict": true,
    "validthis": true,
    "globals": {
      "describe": false,
      "it": false,
      "before": false,
      "beforeEach": false,
      "after": false,
      "afterEach": false
    }
  }
}
