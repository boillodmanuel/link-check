{
  "name": "link-check",
  "version": "4.5.2",
  "description": "checks whether a hyperlink is alive (200 OK) or dead",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "lint-fix": "tslint -p tsconfig.json --fix",
    "pretest": "npm run lint",
    "test": "mocha --exit",
    "build": "npm run lint && rm -rf ./dist && tsc -p tsconfig-build.json",
    "postinstall": "tsc -p tsconfig-build.json"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/tcort/link-check.git"
  },
  "keywords": [
    "link",
    "check",
    "checker",
    "hyperlink",
    "alive",
    "dead",
    "HTTP",
    "head"
  ],
  "author": "Thomas Cort <linuxgeek@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tcort/link-check/issues"
  },
  "homepage": "https://github.com/tcort/link-check#readme",
  "dependencies": {
    "is-relative-url": "^3.0.0",
    "isemail": "^3.2.0",
    "ms": "^2.1.2",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.4",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.14.10",
    "@types/request": "^2.48.5",
    "expect.js": "^0.3.1",
    "express": "^4.17.1",
    "jshint": "^2.12.0",
    "mocha": "^8.2.1",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  },
  "jshintConfig": {
    "bitwise": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "globalstrict": true,
    "immed": true,
    "indent": 4,
    "moz": true,
    "newcap": true,
    "noarg": true,
    "node": true,
    "noempty": true,
    "nonew": true,
    "trailing": true,
    "undef": true,
    "smarttabs": true,
    "strict": true,
    "validthis": true,
    "globals": {
      "describe": false,
      "it": false,
      "before": false,
      "beforeEach": false,
      "after": false,
      "afterEach": false
    }
  }
}
